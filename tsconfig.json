{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@debug/*": ["./debug/*"],
      "@features/*": ["./features/*"],
      "@helpers/*": ["./helpers/*"],
      "@hooks/*": ["./hooks/*"],
      "@shadcn/*": ["./components/shadcn/*"],
      "@shaders/*": ["./components/shaders/*"],
      "@state/*": ["./state/*"],
      "@styles/*": ["./styles/*"],
      "@ui/*": ["./components/ui/*"],
      "@utils/*": ["./utils/*"],
      "@webgl/*": ["./components/webgl/*"],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
